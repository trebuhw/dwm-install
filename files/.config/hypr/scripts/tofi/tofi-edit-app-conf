#!/bin/bash

cd ~/.config/hypr/!link-edit-app-conf/
chosen=$( ls | tofi -c ~/.config/hypr/tofi/config --prompt-text=" ÔÅî "  | awk '{print $1}' )
scripts=$chosen

# Exit if none chosen.                                                                         
[ -z "$chosen" ] && exit

fullpath=$(pwd)/$scripts;

kitty -e nvim $fullpath ;

